<h1>Avaible Hours</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @avaible_hours.each do |avaible_hour| %>
      <tr>
        <td><%= avaible_hour.time %></td>
        <td><%= avaible_hour.date %></td>
        <td><%= link_to 'Show', avaible_hour %></td>
